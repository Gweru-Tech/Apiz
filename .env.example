# Server Configuration
PORT=4000
NODE_ENV=development

# API Configuration
API_CREATOR=Ntando Mods
API_VERSION=1.0.0

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Maintenance Mode
MAINTENANCE_ENABLED=false
MAINTENANCE_GIF_URL=https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExM3ZmM3ZqNG9qczY0cG5qN2Y5N3Bpc2ZjMzZ6M2JkNmRyNHJtN3M3byZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/3o7TKtnrHO0U4Jsr2c/giphy.gif

# Features
ENABLE_DOCS=true
ENABLE_HEALTH_CHECK=true
ENABLE_CORS=true

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
TRUST_PROXY=true
SESSION_SECRET=your-secret-key-here

# External APIs (for production)
# OPENWEATHER_API_KEY=your-openweather-api-key
# YOUTUBE_API_KEY=your-youtube-api-key

# Database (for production)
# DATABASE_URL=mongodb://localhost:27017/hookrest-api
# REDIS_URL=redis://localhost:6379